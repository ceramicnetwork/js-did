{
  "name": "dids",
  "version": "4.0.4",
  "description": "Typescript library for interacting with DIDs",
  "author": "Joel Thorstensson <oed@3box.io>",
  "license": "(Apache-2.0 OR MIT)",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14.14"
  },
  "sideEffects": false,
  "scripts": {
    "build:clean": "del dist",
    "build:js": "swc src -d ./dist --config-file ../../.swcrc",
    "build:types": "tsc --emitDeclarationOnly --skipLibCheck",
    "build": "pnpm run build:clean && pnpm run build:types && pnpm run build:js",
    "lint": "eslint src test --fix",
    "test": "node --experimental-vm-modules ../../node_modules/jest/bin/jest.js",
    "test:ci": "pnpm run test --ci --coverage",
    "prepare": "pnpm run build",
    "prepublishOnly": "package-check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ceramicnetwork/js-did.git"
  },
  "keywords": [
    "DID",
    "identity",
    "did-provider",
    "self-sovereign"
  ],
  "bugs": {
    "url": "https://github.com/ceramicnetwork/js-did/issues"
  },
  "homepage": "https://github.com/ceramicnetwork/js-did#readme",
  "dependencies": {
    "@didtools/cacao": "workspace:^2.1.0",
    "@didtools/codecs": "workspace:^1.0.1",
    "@didtools/pkh-ethereum": "workspace:^0.4.1",
    "@stablelib/random": "^1.0.1",
    "codeco": "^1.2.0",
    "dag-jose-utils": "^3.0.0",
    "did-jwt": "^7.4.5",
    "did-resolver": "^4.1.0",
    "multiformats": "^13.0.0",
    "rpc-utils": "^0.6.1",
    "uint8arrays": "^5.0.1"
  },
  "devDependencies": {
    "@noble/curves": "^1.2.0",
    "ethers": "^6.9.0"
  }
}
