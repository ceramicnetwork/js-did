{
  "testEnvironment": "jsdom",
  "testMatch": ["**/?(*.)+(spec|test).[jt]s?(x)"],
  "setupFilesAfterEnv": [
    "<rootDir>/setup.jest.js"
  ],
  "extensionsToTreatAsEsm": [
    ".ts"
  ],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "transform": {
    "^.+\\.(t|j)s$": [
      "@swc/jest",
      {
        "root": "../.."
      }
    ]
  }
}