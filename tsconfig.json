{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["dom", "es2017"],
    "target": "es6",
    "strict": true,
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./packages",
    "outDir": "lib",
    "rootDir": "src"
  },
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"],
  "include": ["./src/**/*"]
}
