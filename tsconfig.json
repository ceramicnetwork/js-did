{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "resolveJsonModule": false,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "baseUrl": "./packages",
    "outDir": "lib",
    "rootDir": "src"
  },
  "include": ["./src/**/*"]
}
