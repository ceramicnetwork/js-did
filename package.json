{
  "name": "dids",
  "version": "2.1.0",
  "description": "Typescript library for interacting with DIDs",
  "main": "lib/index.js",
  "files": [
    "lib/*"
  ],
  "scripts": {
    "test": "jest",
    "build": "tsc -p tsconfig.json",
    "prepublishOnly": "npm run build",
    "prebuild": "npm run clean",
    "lint": "eslint ./src --ext .js,.ts",
    "docs": "typedoc ./src/index.ts --excludePrivate --name DID --includeVersion ; touch docs/.nojekyll",
    "clean": "rm -rf ./lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ceramicnetwork/js-did.git"
  },
  "jest": {
    "testEnvironment": "jest-environment-uint8array"
  },
  "keywords": [
    "DID",
    "identity",
    "did-provider",
    "self-sovereign"
  ],
  "author": "Joel Thorstensson <oed@3box.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ceramicnetwork/js-did/issues"
  },
  "homepage": "https://github.com/ceramicnetwork/js-did#readme",
  "dependencies": {
    "@stablelib/random": "^1.0.0",
    "cids": "^1.1.6",
    "dag-jose-utils": "^0.1.1",
    "did-jwt": "^5.0.0",
    "did-resolver": "^3.0.1",
    "rpc-utils": "^0.3.4",
    "uint8arrays": "^2.1.5"
  },
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-typescript": "^7.10.4",
    "@types/jest": "^26.0.10",
    "@types/node": "^14.14.41",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "babel-jest": "^26.3.0",
    "eslint": "^7.24.0",
    "eslint-config-3box": "^0.2.0",
    "jest": "^26.4.1",
    "jest-environment-uint8array": "^1.0.0",
    "prettier": "^2.0.5",
    "typedoc": "^0.20.35",
    "typescript": "^4.2.4"
  }
}
