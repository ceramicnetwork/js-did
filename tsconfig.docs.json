{
  "extends": "./tsconfig.build.json",
  "include": [
    "./packages/did-session/src", 
    "./packages/dids/src",
    "./packages/pkh-ethereum/src",
    "./packages/pkh-solana/src"
  ],
  "compilerOptions": {
    "jsx": "preserve",
    "lib": ["DOM", "ES2020"],
    "skipLibCheck": true
  },
  "typedocOptions": {
    "name": "DIDs API",
    "readme": "none",
    "entryDocument": "index.md",
    "entryPoints": [
      "./packages/did-session/src/index.ts", 
      "./packages/dids/src/index.ts",
      "./packages/pkh-ethereum/src/index.ts",
      "./packages/pkh-solana/src/index.ts"
    ],
    "disableSources": true,
    "excludeExternals": true,
    "excludeInternal": true,
    "excludePrivate": true,
    "githubPages": false,
    "hideBreadcrumbs": true,
    "hideInPageTOC": true
  }
}
